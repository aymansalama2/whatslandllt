# Configuration WhatsLand Production
NODE_ENV=production

# Domaine et URLs
DOMAIN=whatsland.click
FRONTEND_URL=https://whatsland.click
BACKEND_URL=https://whatsland.click:5001

# Firebase Configuration
FIREBASE_PROJECT_ID=watsland-96923
FIREBASE_PRIVATE_KEY_ID=your_private_key_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxx@watsland-96923.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your_client_id
FIREBASE_DATABASE_URL=https://watsland-96923-default-rtdb.firebaseio.com

# Base de données
DATABASE_URL=sqlite:./database/whatsland.db

# Sécurité
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Stockage
TEMP_DIR=temp
MAX_FILE_SIZE=33554432

# Logging
LOG_LEVEL=ERROR

# Chrome/Puppeteer
CHROME_PATH=/usr/bin/chromium-browser

# Admin emails (séparés par des virgules)
ADMIN_EMAILS=houssnijob@gmail.com,ayman@gmail.com

# Monitoring
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true